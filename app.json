{
  "name": "CapCut Maker",
  "description": "Web-based CapCut account creator with modern UI",
  "repository": "https://github.com/Gugun09/capcut-bot",
  "keywords": ["nodejs", "puppeteer", "automation", "capcut"],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": {
      "description": "Skip Chromium download, use buildpack version",
      "value": "true"
    },
    "PUPPETEER_SKIP_DOWNLOAD": {
      "description": "Skip Chromium download",
      "value": "true"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  }
}

